@model AdvancedRepository.Models.ViewModels.UnitsModel

@{
    ViewData["Title"] = "Crud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>@Model.BtnHead</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post">
            <div class="form-group" hidden>
                <input asp-for="Units.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Units.UnitName" class="control-label"></label>
                <input asp-for="Units.UnitName" class="form-control" />
                <span asp-validation-for="Units.UnitName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@Model.BtnVal" class="@Model.BtnClass" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-warning" asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
