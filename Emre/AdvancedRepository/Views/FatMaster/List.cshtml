@model IEnumerable<AdvancedRepository.DTOs.FatMasterList>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
               Id
            </th>
            <th>
               Date
            </th>
            <th>
                CompanyName
            </th>
     
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                 @item.FatMasterId
            </td>
            <td>
                 @item.Date
            </td>
            <td>
                @item.CompanyName
            </td>
      
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.FatMasterId">Edit</a> |
                <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.FatMasterId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.FatMasterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
