@model AdvancedRepository.Models.ViewModels.FatMasterModel

@{
    ViewData["Title"] = "Crud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4>@Model.BtnHead</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group" hidden>
                <input asp-for="FatMaster.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FatMaster.Date" class="control-label"></label>
                <input asp-for="FatMaster.Date" class="form-control" />
                <span asp-validation-for="FatMaster.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                       <select asp-for="FatMaster.CustomerId" class="form-control">
                        @foreach (var item in Model.Customers)
                        {

                                <option value="@item.Id">@item.CompanyName</option>

                        }
                    </select>
            </div>
    
            <div class="form-group">
                <input type="submit" value="@Model.BtnVal" class="@Model.BtnClass" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-warning" asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
