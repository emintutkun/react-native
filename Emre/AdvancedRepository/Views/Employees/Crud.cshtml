@model AdvancedRepository.Models.ViewModels.EmployeeModel

@{
    ViewData["Title"] = "Crud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>@Model.BtnHead</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post">
            <div class="form-group" hidden>
                <input asp-for="Employees.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Employees.FirstName" class="control-label"></label>
                <input asp-for="Employees.FirstName" class="form-control" />
                <span asp-validation-for="Employees.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employees.LastName" class="control-label"></label>
                <input asp-for="Employees.LastName" class="form-control" />
                <span asp-validation-for="Employees.LastName" class="text-danger"></span>
            </div>
         
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Employees.IsManager" /> @Html.DisplayNameFor(model => model.Employees.IsManager)
                </label>
            </div>
            <div class="form-group">
               
                    <select name="Employees.ManagerId" class="form-control">
                        @foreach (var item in Model.ManagerList)
                        {

                            if (item.ManagerId == Model.Employees.ManagerId)
                            {
                                <option selected style="color:red" name="Employees.ManagerId" value="@item.ManagerId">@item.FullName</option>

                            }
                            else
                            {
                                <option name="Employees.ManagerId" value="@item.ManagerId">@item.FullName</option>

                            }
                        }
                    </select>
              

            </div>

          
            
            <div class="form-group">

                <select name="Employees.CountryId" class="form-control">
                    @foreach (var item in Model.CountriesList)
                    {

                        if (item.Id == Model.Employees.CountryId)
                        {
                            <option selected style="color:red" name="Employees.CountryId" value="@item.Id">@item.CountryName</option>

                        }
                        else
                        {
                            <option name="Employees.CountryId" value="@item.Id">@item.CountryName</option>

                        }
                    }
                </select>
            </div>

         
            <div class="form-group">
                <label asp-for="Employees.PhoneNumber" class="control-label"></label>
                <input asp-for="Employees.PhoneNumber" class="form-control" />
                <span asp-validation-for="Employees.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employees.DateofBirth" class="control-label"></label>
                <input asp-for="Employees.DateofBirth" class="form-control" />
                <span asp-validation-for="Employees.DateofBirth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@Model.BtnVal" class="@Model.BtnClass" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-warning" asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
