@model IEnumerable<AdvancedRepository.DTOs.ProductList>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Product Id
            </th>
            <th>
                Product Name
            </th>
            <th>
                Company Name
            </th>
            <th>
                Category Name
            </th>
            <th>
                Unit Name
            </th>
   
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.ProductId
            </td>
            <td>
                @item.ProductName
            </td>
            <td>
                @item.CompanyName
            </td>
            <td>
                @item.CategoryName
            </td>
            <td>
                @item.UnitName
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
